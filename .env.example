# Copy to .env and fill in real values. Never commit .env.
# Required for production:
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require
SESSION_SECRET=generate-a-long-random-string-for-sessions
ADMIN_SETUP_KEY=your-secure-setup-key-for-first-admin

# Optional - app URL (production)
APP_URL=https://your-domain.com

# Optional - Stripe (billing)
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Optional - Email (Resend). For local dev set these to send ministry-admin credentials etc.; on Replit, Resend connector is used if RESEND_API_KEY is not set.
# RESEND_API_KEY=re_...
# EMAIL_FROM=Zoweh Life <noreply@yourdomain.com>

# Optional - SMS (ClickSend)
# CLICKSEND_USERNAME=
# CLICKSEND_API_KEY=

# Optional - OpenAI (AI features)
# OPENAI_API_KEY=sk-...

# Optional - Object storage (Replit / production uploads). If unset, logo uploads use local disk.
# PRIVATE_OBJECT_DIR=/bucket-name
# PUBLIC_OBJECT_SEARCH_PATHS=/bucket-name/public

# Optional - Seed scripts (dev only, do not use production credentials)
# MINISTRY_ADMIN_EMAIL=admin@example.com
# MINISTRY_ADMIN_PASSWORD=
# LEADER_EMAIL=leader@example.com
# LEADER_PASSWORD=
